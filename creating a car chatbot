import gradio
from groq import Groq
client = Groq(
    api_key="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",
)
def initialize_messages():
    return [{"role": "system",
             "content": """You are a knowledgeable and professional car dealer 
        with expertise in cars, pricing, vehicle features, maintenance tips, 
        financing options, and the entire car-buying process. Your role is 
        to assist users by providing clear, reliable guidance and helping 
        them make informed decisions related to cars."""}]
messages_prmt = initialize_messages()
print(type(messages_prmt))
def customLLMBot(user_input, history):
    global messages_prmt

    messages_prmt.append({"role": "user", "content": user_input})

    response = client.chat.completions.create(
        messages=messages_prmt,
        model="llama-3.3-70b-versatile",
    )
    print(response)
    LLM_reply = response.choices[0].message.content
    messages_prmt.append({"role": "assistant", "content": LLM_reply})
    return LLM_reply
iface = gradio.ChatInterface(customLLMBot,
                     chatbot=gradio.Chatbot(height=300),
                     textbox=gradio.Textbox(placeholder="Ask me a question related to Cars"),
                     title="CarWow ChatBot",
                     description="Chat bot for car assistance",
                     theme="soft",
                     examples=["hi","Which car is best under 10 lakhs?","Is petrol or diesel better for long-term use?"]
                     )
iface.launch(share=True)
